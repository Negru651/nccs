	urldate = {2024-05-03},
	journal = {Journal of Public Budgeting, Accounting \& Financial Management},
	author = {Intindola, Melissa and Burke-Kolehmainen, Cari},
	month = jan,
	year = {2023},
	keywords = {COVID-19, Financial distress, IRS form 990, Lockdown, Nonprofit},
