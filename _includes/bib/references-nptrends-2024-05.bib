	author = {Clary, Patricia A. and Rose, Patricia Vezina},
	month = dec,
	year = {2022},
	keywords = {COVID-19, burnout, macro-level, mezzo-level, micro-level, nonprofit, self-care, systems-thinking, well-being},
	pages = {331--341},
}

